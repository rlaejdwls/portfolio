<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View 01"
        android:id="@+id/txt_view_01"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View 02"
        android:id="@+id/txt_view_02" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View 03"
        android:id="@+id/txt_view_03" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text View 04"
        android:id="@+id/txt_view_04" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glide Test"
            android:id="@+id/btn_glide_test"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Test"
            android:id="@+id/btn_dialog_test"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_glide_test"
            android:layout_toEndOf="@+id/btn_glide_test" />
        <Button
            android:id="@+id/btn_realm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_dialog_test"
            android:layout_toRightOf="@+id/btn_dialog_test"
            android:text="Realm" />
        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:layout_below="@+id/btn_glide_test"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btn_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:layout_below="@+id/btn_glide_test"
            android:layout_toRightOf="@+id/btn_test"
            android:layout_toEndOf="@+id/btn_test" />
        <Button
            android:id="@+id/btn_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:layout_below="@+id/btn_glide_test"
            android:layout_toRightOf="@+id/btn_image"
            android:layout_toEndOf="@+id/btn_image" />
        <Button
            android:id="@+id/btn_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_realm"
            android:layout_toEndOf="@+id/btn_library"
            android:layout_toRightOf="@+id/btn_library"
            android:text="Pager" />
        <Button
            android:id="@+id/btn_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget"
            android:layout_below="@+id/btn_pager"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/img_test"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"/>
    </RelativeLayout>
</LinearLayout>
